<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".OptionsActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game"
        android:textSize="50dp"
        android:textColor="#bbe1fa"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/joinBtn"/>

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:text="Join Room"
        android:textSize="20dp"
        android:background="@drawable/custom_button"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/createBtn"/>

    <Button
        android:id="@+id/createBtn"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:text="Create Room"
        android:textSize="20dp"
        android:background="@drawable/custom_button"
        app:layout_constraintTop_toBottomOf="@+id/joinBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/logoutBtn"/>

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="QUIT"
        android:textSize="17dp"
        android:background="@drawable/custom_button"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintTop_toBottomOf="@+id/createBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>